{
  "name": "point-flow-server",
  "version": "1.0.0",
  "type": "module",
  "description": "Point Flow - Planning Poker Server",
  "main": "dist/src/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npm run fix-imports",
    "fix-imports": "node --eval \"const{readdirSync,readFileSync,writeFileSync,statSync}=require('fs'),{join}=require('path');function fix(d){readdirSync(d).forEach(f=>{const p=join(d,f);statSync(p).isDirectory()?fix(p):f.endsWith('.js')&&writeFileSync(p,readFileSync(p,'utf8').replace(/from\\s*['\\\"](.+)\\.ts['\\\"]/g,\\\"from '\\$1.js'\\\"))})}fix('./dist')\"",
    "start": "node dist/src/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "nanoid": "^5.0.4",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2"
  }
}
